%body
  %div
    %div.header_transbox
      %h1.title Pills: A Pocket Guide

    %div.col-lg-3.col-md-6.fact_card
      %center
        %p Navigation
        %div
        %li
          %a{ :href => "" } Patients
        %div
        %li
          %a{ :href => "" } Doctors
        %div
        %li
          %a{ :href => "" } Manufacturers
        %p
    %div.col-lg-3.col-md-6.fact_card
      %center
        %p Search for drug information
        %div
        = form_tag homepage_index_path, :method => :get, :id => 'search_form' do
          = text_field_tag 'search_field'
          = submit_tag 'Search', :id => 'search_button', :class => 'btn btn-primary'

        - if @searched_drug != nil
          %p Search Results:
          %a.btn.btn-primary{:href => drug_path(@searched_drug.id)} More about #{@searched_drug.title}
        - else
          %p No medications searched for or found...
        %p
    %div.col-lg-3.col-md-6.fact_card
      %center
        %p Browse All Drugs in our Database
        %a.btn.btn-primary{:href => '/drugs'} Drug Index
